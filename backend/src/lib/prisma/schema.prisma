generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  username String
  content Content[]
  link Link?
}

model Content{
  id Int @id @default(autoincrement())
  url String
  type String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Link {
  id     Int    @id @default(autoincrement())
  hash   String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}